<% if @follow_request.present? %>
  <% if @follow_request.errors.any? %>
    <% @follow_request.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new follow request
</h1>


<hr>

<form action="/create_follow_request" method="post">

  <div class="form-check">
    <input type="hidden" value="0" name="status">
    <input id="status" class="form-check-input" name="status" type="checkbox" <%= "checked" if @follow_request.status %>>
    <label for="status" class="form-check-label">
      Status
    </label>
  </div>

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <%= select_tag(:sender_id, options_from_collection_for_select(User.all, :id, :email, @follow_request.sender_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <%= select_tag(:recipient_id, options_from_collection_for_select(User.all, :id, :email, @follow_request.recipient_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create follow request
  </button>
</form>

<hr>

<a href="/follow_requests">
  Go back
</a>
